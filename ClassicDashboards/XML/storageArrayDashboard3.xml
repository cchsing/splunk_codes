<form theme="dark">
  <label>Storage Array Capacity (Utilisation - Table)</label>
  <fieldset submitButton="true" autoRun="false">
    <input type="time" token="filter-time">
      <label>Time Range</label>
      <default>
        <earliest>-30d@d</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="multiselect" token="filter-location">
      <label>Location</label>
      <fieldForLabel>Location</fieldForLabel>
      <fieldForValue>Location</fieldForValue>
      <search>
        <query>index="cimb_capacity" 
| dedup Location
| table Location</query>
        <earliest>$filter-time.earliest$</earliest>
        <latest>$filter-time.latest$</latest>
      </search>
      <choice value="*">All</choice>
      <default>*</default>
      <initialValue>*</initialValue>
      <valuePrefix>"</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter>OR</delimiter>
    </input>
    <input type="multiselect" token="filter-asset">
      <label>Asset</label>
      <fieldForLabel>Asset</fieldForLabel>
      <fieldForValue>Asset</fieldForValue>
      <search>
        <query>index="cimb_capacity" Location=$filter-location$  
| dedup Asset
| table Asset</query>
        <earliest>$filter-time.earliest$</earliest>
        <latest>$filter-time.latest$</latest>
      </search>
      <choice value="*">All</choice>
      <default>*</default>
      <initialValue>*</initialValue>
      <valuePrefix>"</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter>OR</delimiter>
    </input>
    <input type="multiselect" token="filter-disktype">
      <label>Disk Type</label>
      <fieldForLabel>Disk Type</fieldForLabel>
      <fieldForValue>Disk Type</fieldForValue>
      <search>
        <query>index="cimb_capacity" Location=$filter-location$  Asset=$filter-asset$ 
| dedup "Disk Type"
| table "Disk Type"</query>
        <earliest>$filter-time.earliest$</earliest>
        <latest>$filter-time.latest$</latest>
      </search>
      <choice value="*">All</choice>
      <default>*</default>
      <initialValue>*</initialValue>
      <valuePrefix>"</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter>OR</delimiter>
    </input>
  </fieldset>
  <row>
    <panel>
      <input type="text" token="filter-threshold1" searchWhenChanged="true">
        <label>Selection Criteria (Used %)</label>
        <default>50</default>
        <initialValue>50</initialValue>
      </input>
      <input type="dropdown" token="rowspp1" searchWhenChanged="true">
        <label>Rows Per Page</label>
        <choice value="20">20 entries</choice>
        <choice value="40">40 entries</choice>
        <choice value="80">80 entries</choice>
        <default>20</default>
        <initialValue>20</initialValue>
      </input>
      <table>
        <search>
          <query>index="cimb_capacity" Location=$filter-location$  Asset=$filter-asset$ "Disk Type"=$filter-disktype$
| eval epochDate=strptime("01-".Month, "%d-%b-%y") 
| eval date=strftime(epochDate, "%Y-%m-%d")
| convert num("Used ") as used_pct
| where used_pct &gt; $filter-threshold1$
| sort - date
| Table Month, Location, Asset, "Disk Type", "Installed _GB", "Baseline _GB", "Consumed _GB", "Used ", "Free ", "Warning ", "Ciritcal "</query>
          <earliest>$filter-time.earliest$</earliest>
          <latest>$filter-time.latest$</latest>
        </search>
        <option name="count">$rowspp1$</option>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>
</form>